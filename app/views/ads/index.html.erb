<div class = 'container'>
<ul class="nav nav-pills nav-fill">
  <li class="nav-item">
    <%= link_to "New ads (#{Ad.new_ads.count})", ads_path(q: {status_eq: 'new'}) %>
  </li>
  <li class="nav-item">
    <%= link_to "Interesting (#{Ad.interesting.count})", ads_path(q: {status_eq: 'interesting'}) %>
  </li>
  <li class="nav-item">
    <%= link_to "In progress (#{Ad.in_progress.count})", ads_path(q: {status_eq: 'in_progress'}) %>
  </li>
  <li class="nav-item">
    <%= link_to "Accepted (#{Ad.accepted.count})", ads_path(q: {status_eq: 'accepted'}) %>
  </li>
  <li class="nav-item">
    <%= link_to "All (#{Ad.count})", ads_path %>
  </li>
</ul>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th><%= sort_link(@q, :title) %></th>
      <th><%= sort_link(@q, :price) %></th>
      <th><%= sort_link(@q, :status) %></th>
      <th><%= sort_link(@q, :search_link_id) %></th>
      <th><%= sort_link(@q, :publicated_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= link_to(image_tag(ad.image_path || '[]', height: '100', width: '100'), ad, target: '_blank') %></td>
        <td><%= link_to ad.title, ad %></td>
        <td><%= ad.price %> â‚¬</td>
        <td><%= ad.status %></td>
        <td><%= ad.search_link.name %></td>
        <td><%= ad.publicated_at.strftime('%H:%M, %d.%m.%Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
