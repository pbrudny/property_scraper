<h1>
  <%= link_to "New ads (#{Ad.new_ads.count})", ads_path %>|
  <%= link_to 'Interesting', ads_path(q: {status_eq: 'interesting'}) %>|
  <%= link_to 'In progress', ads_path(q: {status_eq: 'in_progress'}) %>|
  <%= link_to 'Accepted', ads_path(q: {status_eq: 'accepted'}) %>
</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      <th><%= sort_link(@q, :title) %></th>
      <th><%= sort_link(@q, :price) %></th>
      <th><%= sort_link(@q, :status) %></th>
      <th><%= sort_link(@q, :search_link_id) %></th>
      <th><%= sort_link(@q, :tipologia) %></th>
      <th><%= sort_link(@q, :publicated_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= link_to(image_tag(ad.image_path || '[]', height: '100', width: '100'), ad, target: '_blank') %></td>
        <td><%= link_to ad.title, ad %></td>
        <td><%= ad.price %> â‚¬</td>
        <td><%= ad.status %></td>
        <td><%= ad.search_link.name %></td>
        <td><%= ad.tipologia %></td>
        <td><%= ad.publicated_at.strftime('%H:%M, %d.%m.%Y') %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
