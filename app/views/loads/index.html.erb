<p id="notice"><%= notice %></p>

<h1>Loads</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Ads</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @loads.each do |load| %>
      <tr>
        <td><%= load.ads.count %></td>
        <td><%= load.created_at.strftime('%H:%M, %d.%m.%Y') %></td>
        <td><%= link_to 'Show', load %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
