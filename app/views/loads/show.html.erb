<p id="notice"><%= notice %></p>

<p>
  <strong>Time:</strong>
  <%= @load.created_at.strftime('%H:%M, %d.%m.%Y') %>
</p>

<h2><strong>Ads (<%= @load.ads.count %>):</strong></h2>
<% @load.ads.each do |ad| %>
    <p>
      <%= link_to ad.title, ad_path(ad) %>
    </p>
<% end %>

<h2><strong>Errors:</strong></h2>
<% @load.errors_list.flatten.each do |e| %>
  <p>
    <%= e %>
  </p>
<% end %>

<%= link_to 'Back', loads_path %>
